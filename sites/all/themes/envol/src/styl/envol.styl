/* iris css file */

// Imports
@import '../../lib/styl/_conf'
@import '../../lib/styl/_effects'
@import '../../lib/styl/layout.styl'
@import '../../lib/styl/header.styl'
@import '../../lib/styl/footer.styl'
@import '../../lib/styl/navigation.styl'
//@import '../../lib/styl/sidebars.styl'

// Specials
.left
  float left
.right
  float right
.clear
  clear both

.mr20
  margin-right 20px
.ml20
  margin-left 20px

// General
body
  font-family arial

img
  display block

#main
  position relative
  box-sizing border-box
  width 1024px
  margin 0 auto
  padding 20px 10px
  background #fff
  font-size 13px
  color #666
  clearfix()

// Generic Elements
.node-teaser
  clearfix()

.page__title
  font-size 40px
  color #000
  margin-bottom 16px
.page-analyse
  &.page-views
    .node
      h1
        @extend .page__title
        margin-top 10px
        margin-left -3px
        letter-spacing -1px

.node-title
  color #000
  & a
    color #000
    text-decoration none

.field-name-field-category
  color #666
  text-transform uppercase
  position relative
  display inline-block
  font-size 12px
  margin-top 5px
  &:after
    display block
    box-sizing border-box
    absolute top 0 bottom 0 right -15px
    content 'â€º'
    font-size 19px
    line-height .45em

.wrapper-thematique
  font-size 14px
  font-weight bold
  text-transform uppercase

.field-name-field-date
  font-size 15px
  font-weight bold
  text-transform uppercase

.field-name-body
  font-size 13px

// Views
.views-row
  padding 20px 0
  border-bottom solid 1px #eaeaea
.views-row-first
  padding-top 0
.views-row-last
  border none
.view-footer
  clear both
  text-align center
.readmore
  float right
  color #8fa5b1
  text-decoration none
.item-list
  .pager
    font-weight bold
    li
      padding 8px 5px
      margin 0
    .pager-next,
    .pager-previous
      display none
    .pager-first,
    .pager-last
      color #000
      font-size 14px
      letter-spacing -5px
      & a
        color #000
    & a
      text-decoration none

.wrapper-close-button
  text-align center
.bigbutton
  display inline-block
  box-sizing border-box
  padding 5px 15px
  font-weight bold
  text-transform uppercase
  text-decoration none
  font-size 12px
  &.blue
    color #fff
    background #46a4b8
  &.green
    color #fff
    background #91b355


// Structure of home page

// Structure of views lefil
.page-lefil,
.node-type-story
  .field-name-field-date
    color #ed0361
  .node-teaser
    .wrapper-info
      .node-title
        font-size 16px
        margin 12px 0
  .pager
    .pager-item
      & a
        color #ed0361
    .pager-current
      color #fff
      background #ed0361

// Structure page analyse
.page-analyse
  .field-name-field-date
    color #91b355
  .view-mode-full
    position relative
    h2
      color #000
      font-size 15px
      margin 0 0 15px
    p
      margin-bottom 15px
    .wrapper-thematique
      color #91b355
    .field-name-field-chapo
      box-sizing border-box
      padding 20px
      color #fff
      font-size 16px
      background #1c1c1b
      .field-item
        border-left solid 1px #fff
        padding-left 20px
        line-height 1.4em
    .field-name-field-date
      margin 15px 0
    .field-name-body
      line-height 1.3em
    .field-name-field-auteur
      float right
      font-size 14px
      font-weight bold
      color #000
      margin-bottom 20px
    .wrapper-collaborateurs
      box-sizing border-box
      padding 20px 20px 20px 110px
      background #e9e4df url('../images/trombone.png') 20px center no-repeat
      p.first
        margin 0
        padding 0 0 15px 20px
        border-left solid 1px #fff
      .field-name-field-collaborateurs
        box-sizing border-box
        padding-left 20px
        border-left solid 1px #fff
        p
          margin-bottom 5px
          strong
            font-size 15px
    .wrapper-experts-complete
      absolute top -2px bottom 0 left 0 right 0
      display none
      box-sizing border-box
      background #fff
      z-index 100
      .node-title
        font-size 40px
      .field-name-field-visuel
        float left
        margin-right 20px
      .field-name-field-nom-prenom,
      .field-name-field-fonction-titre,
      .field-name-field-localisation
        font-size 15px
        font-weight bold
        color #000
      .field-name-field-nom-prenom
        display inline
        div
          display inline
        strong
          color #91b355
      .field-name-field-fonction-titre
        display inline
        div
          display inline
      .field-name-field-localisation
        color #91b355
        margin-top 5px
      .field-name-field-parole-expert
        padding-top 20px
        line-height 1.3em
        strong
          font-size 14px
      .field-collection-container
        border none
        margin 0
        .field-item
          margin 25px 0 0
      .field-collection-view
        padding 0 0 25px
        margin 0
        border-bottom solid 1px #eaeaea
      .field-collection-view-final
        border none
      .entity-field-collection-item
        .field-item
          margin 0
  .wrapper-experts
    position relative
    box-sizing border-box
    padding 70px 20px
    background-color #413733
    color #fff
    float left
    margin 0 20px 0 0
    width 260px
    cursor pointer
    &:before,
    &:after
      content " "
      display block
      width 51px
      height 39px
      background url('../images/ic-parole-expert.png') 0 0 no-repeat
    &:before
      absolute top 20px left 20px
    &:after
      absolute bottom 20px right 20px
      background-position 0 -39px
    .title-encart
      text-transform uppercase
      font-weight normal
      font-size 16px
      color #fff
      margin 0
      letter-spacing 0.18em
    li
      clearfix()
      margin-top 20px
    span
      display block
    .visuel-exp
      float left
      width 70px
      height 86px
      margin-right 20px
      img
        display block
        width 100%
        max-width 100%
    .wrapper-info
      float left
      width 130px
    .name-exp
      font-size 15px
      font-weight bold
    .function-exp
      margin 5px 0
    .localisation-exp
      color #91b355
