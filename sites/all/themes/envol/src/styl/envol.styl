/* iris css file */

// Imports
@import '../../lib/styl/_conf'
@import '../../lib/styl/_effects'
@import '../../lib/styl/layout.styl'
@import '../../lib/styl/header.styl'
@import '../../lib/styl/footer.styl'
@import '../../lib/styl/navigation.styl'
//@import '../../lib/styl/sidebars.styl'

// Specials
.left
  float left
.right
  float right
.clear
  clear both

.mr20
  margin-right 20px
.ml20
  margin-left 20px

// General
body
  font-family arial

img
  display block

#main
  position relative
  box-sizing border-box
  width 1024px
  margin 0 auto
  padding 20px 10px
  background #fff
  font-size 13px
  color #666
  clearfix()

// Generic Elements
.node-teaser
  clearfix()

.page__title
  font-size 40px
  color #000
  margin-bottom 16px
.page-analyse
  &.page-views
    .node
      h1
        @extend .page__title
        margin-top 10px
        margin-left -3px
        letter-spacing -1px

.node-title
  color #000
  & a
    color #000
    text-decoration none

.field-name-field-category
  color #666
  text-transform uppercase
  position relative
  display inline-block
  font-size 12px
  margin-top 5px
  &:after
    display block
    box-sizing border-box
    absolute top 0 bottom 0 right -15px
    content 'â€º'
    font-size 19px
    line-height .45em

.wrapper-thematique
  font-size 14px
  font-weight bold
  text-transform uppercase

.field-name-field-date
  font-size 15px
  font-weight bold
  text-transform uppercase

.field-name-body
  font-size 13px

// Views
.views-row
  padding 20px 0
  border-bottom solid 1px #eaeaea
.views-row-first
  padding-top 0
.views-row-last
  border none
.view-footer
  clear both
  text-align center
.readmore
  float right
  color #8fa5b1
  text-decoration none
.item-list
  .pager
    font-weight bold
    li
      padding 8px 5px
      margin 0
    .pager-next,
    .pager-previous
      display none
    .pager-first,
    .pager-last
      color #000
      font-size 14px
      letter-spacing -5px
      & a
        color #000
    & a
      text-decoration none


.bigbutton
  display inline-block
  box-sizing border-box
  padding 5px 15px
  font-weight bold
  text-transform uppercase
  text-decoration none
  font-size 12px
  &.blue
    color #fff
    background #46a4b8

// Structure of home page

// Structure of views lefil
.page-lefil
  .field-name-field-date
    color #ed0361
  .node-teaser
    .wrapper-info
      .node-title
        font-size 16px
        margin 12px 0
  .pager
    .pager-item
      & a
        color #ed0361
    .pager-current
      color #fff
      background #ed0361

// Structure page analyse
.page-analyse
  .field-name-field-date
    color #91b355
  .view-mode-full
    .wrapper-thematique
      color #91b355
    .field-name-field-chapo
      box-sizing border-box
      padding 20px
      color #fff
      font-size 16px
      background #1c1c1b
      .field-item
        border-left solid 1px #fff
        padding-left 20px
        line-height 1.4em
    .field-name-field-date
      margin 15px 0
    .field-name-body
      line-height 1.3em
    h2
      color #000
      font-size 14px
      margin 10px 0
