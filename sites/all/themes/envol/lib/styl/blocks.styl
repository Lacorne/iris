/* Blocks */
.sidebars
  .block
    margin-bottom 20px

// General Settings Title and style
// Block type nodeblock (powered by nodeblock module)
// Block type fond blanc (powered by bean module)
// Block type fond gris (powered by bean module)
.block-nodeblock,
.block-type--fond_blanc,
.block-type--fond_gris,
  .block-type--fond_gris_filet
  box-sizing border-box
  margin-left 20px
  line-height 1.3
  .block__title
    position relative
    display inline-block
    padding 10px 10px 10px 15px
    margin-bottom 20px
    text-transform uppercase
    color #fff
    background #000
    &:after
      content "â–¼"
      display block
      width 20px
      color #000
      absolute bottom -10px left 20px right 0
      text-align center
      transform scaleX(1.5)
  ul
    padding-left 15px
  li
    list-style square
    margin-bottom 10px

// Block type fond blanc (powered by bean module)
// Block type fond gris (powered by bean module)
.block-nodeblock,
.block-type--fond_blanc
  background #fff

// Block type fond gris (powered by bean module)
.block-type--fond_gris,
.block-type--fond_gris_filet
  padding 20px
  background #e9e4df

// Specials Settings
// Block type nodeblock (powered by nodeblock module)
.block-nodeblock
  .field-name-field-nom-prenom
    margin-bottom 15px
    strong
      color #000
  .field-name-field-contenu-block
    clear both
    padding-top 15px
    .field-items
      padding-top 13px
      border-top solid 1px #000
  .readmore
    font-size 13px
    font-weight bold
    text-transform uppercase
    text-decoration none
    color #000
    span
      color #000
      letter-spacing -5px
      margin-right 5px
  li
    p
      .page-analyse &,
      .node-type-analyse &
        color color_green
      .page-lefil &,
      .node-type-story &
        color color_magenta
      .page-analyse &,
      .node-type-analyse &
        color color_green
      .page-invite &,
      .node-type-invite &
        color color_blue
      .page-agenda &,
      .node-type-agenda &
        color color_orange
      .page-focus &,
      .node-type-focus &
        color color_purple
      .page-chroniques &,
      .node-type-chroniques &
        color color_sepia
      .page-ensemble &,
      .node-type-ensemble &
        color color_yellow
      .page-une-journee-avec &,
      .node-type-une-journee-avec &
