/* Common footer for Iris */
#footer
  position relative
  height 44px
  background #1c1c1b
  clearfix()
  .footer__region
    position relative
    box-sizing border-box
    width 1024px
    margin 0 auto
    padding 0 20px

  //iris footer links
  #block-envol-blocks-footer-links
    color #fff
    font-size 14px
    font-weight bold
    .copyright
      padding 15px 0
      text-transform uppercase
    .mail
      text-align center
      absolute top 0 left 270px right 270px
      display block
      padding 15px
      font-size 12px
    a
      color #fff
      font-weight bold
      text-decoration none
    .wrapper-footer-links
      clearfix()
      absolute top 0 right 20px
      p,
      ul
        font-size 13px
        display block
        float left
      p
        padding 15px 10px
        background #333
      li
        display block
        float left
        &.link-normal
          padding 7px
        &.icone
          a
            width 35px
            height 44px
          &.facebook
            a
              background-position -3px -5px
          &.twitter
            a
              background-position -39px -4px
          &.linkedin
            a
              background-position -74px -4px

