/* navigation superfish for Iris */

#navigation
  box-sizing border-box
  absolute top -50px left 270px
  li
    list-style none
    padding 0
    margin 0
    font-size 13px
    font-weight bold
    margin 0 20px
    &.first
      margin-left 0
  a
    position relative
    color #333
    text-decoration none
    text-transform uppercase
    padding 5px 10px
    &.active
      color #fff
      &:before
        content "▼"
        display block
        absolute bottom -11px left 0 right 0
        text-align center
        transform scaleX(1.15)
      &:after
        content "▼"
        display block
        color #fff
        absolute bottom -20px left 0 right 0
        text-align center
        transform scaleX(1.15)
    .page-lefil &.active
      background #ed0361
      &:before
        color #ed0361
