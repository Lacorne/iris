// Structure of home page
.front
  .page__title
    display none
  .views-row
    border-bottom none
  .region-highlighted
    box-sizing border-box
    padding 0 10px
    .block-title
      display none
    .view-display-id-first_article_home_envol
      height 352px
      max-height 352px
      margin-bottom 20px
      .field-name-field-thematique
        display none
      .wrapper-info
        box-sizing border-box
        float left
        width 312px
      .wrapper-big-title
        position relative
        background #000
        padding 20px
        &:after
          content "▼"
          display block
          color #000
          absolute bottom -10px left 0 right 0
          text-align center
          transform scaleX(2)
        .node-type-title
          font-size 14px
          text-transform uppercase
          font-weight bold
          margin-bottom 10px
        .node__title
          color #fff
          font-size 24px
          line-height 1.3
          a
            color #fff
      .field-name-body,
      .field-name-field-chapo
        color #fff
        font-size 16px
        line-height 1.3
        padding 0 15px
        margin 20px
        border-left solid 1px #fff
        overflow hidden
        p
          margin 0
      .readmore
        position relative
        color #fff
        font-weight bold
        text-transform uppercase
        margin-left 20px
        padding-left 25px
        float none
        &:before
          content "►►"
          display block
          color #fff
          absolute top 0 left 0
          text-align center
          letter-spacing -5px
      .field-name-field-visuel
        width 672px
        float left
        img
          width 100%
          height auto
      .node-analyse
        background color_green
        .node-type-title
          color color_green
      .node-invite
        background color_blue
        .node-type-title
          color color_blue
      .node-focus
        background color_purple
        .node-type-title
          color color_purple
      .node-chroniques
        background color_sepia
        .node-type-title
          color color_sepia
      .node-ensemble
        background color_yellow
        .node-type-title
          color color_yellow
      .node-une-journee-avec
        background color_red
        .node-type-title
          color color_red

  .view-display-id-home
    column(8.24)
    pull(-8.24)
    box-sizing border-box
    padding-right 20px
    .views-row
      box-sizing border-box
      padding 0
      .field-name-field-thematique
        display none
      .node-type-title
        display inline-block
        position relative
        font-size 16px
        text-transform uppercase
        font-weight bold
        margin 0
      .node__title
        font-size 16px
        margin-bottom 15px
        line-height 1.3
      .field-name-body,
      .field-name-field-chapo
        h2,
        p
          font-weight normal
          line-height 1.3
      .node-analyse
        .readmore,
        .node-type-title
          color color_green
      .node-invite
        .readmore,
        .node-type-title
          color color_blue
      .node-focus
        .readmore,
        .node-type-title
          color color_purple
      .node-chroniques
        .readmore,
        .node-type-title
          color color_sepia
      .node-ensemble
        .readmore,
        .node-type-title
          color color_yellow
      .node-une-journee-avec
        .readmore,
        .node-type-title
          color color_red
    .views-row:nth-child(n+3)
      clear both
      margin-bottom 15px
      padding-top 20px
      border-top solid 1px #eaeaea
      .field-name-field-visuel
        float left
        width 230px
        margin-right 15px
        img
          width 100%
          height auto
      .node-type-title
        margin-bottom 10px
    .views-row-1
      column(4, 12, noleft)
    .views-row-2
      column(4, 12, noright)
    .views-row-1,
    .views-row-2
      border none
      margin-bottom 20px
      .wrapper-info
        padding-left 15px
        border-left solid 1px #000
      .node-type-title
        margin 10px 0 10px 27px
        &:before
          display block
          absolute top -15px left 0 right 0
          content ""
          height 5px
          background #fff
      .field-name-body,
      .field-name-field-chapo
        white-space normal
        overflow hidden
        p
          margin 0
      .field-name-field-visuel
        position relative
        border-bottom solid 10px #000
        img
          width 100%
          height auto
        &:after
          display block
          absolute bottom -10px left 0
          content ""
          width 55px
          height 10px
      .node-analyse
        .field-name-field-visuel
          &:after
            background color_green
      .node-invite
        .field-name-field-visuel
          &:after
            background color_blue
      .node-focus
        .field-name-field-visuel
          &:after
            background color_purple
      .node-chroniques
        .field-name-field-visuel
          &:after
            background color_sepia
      .node-ensemble
        .field-name-field-visuel
          &:after
            background color_yellow
      .node-une-journee-avec
        .field-name-field-visuel
          &:after
            background color_red
    .views-row-3
      border-top solid 1px #000 !important

  .region-second-content
    column(4)
    push(8)
    pull(-12)


