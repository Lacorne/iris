
// Structure of views lefil and page le fil (node-type-story)
.page-archive
  .field-name-field-date
    color color_magenta
  .view-archive
    ul
      padding-left 20px
    li
      list-style disc
      margin-bottom 5px
    a:not(.readmore)
      color #000
  .node-teaser
    .wrapper-info
      .field-name-field-thematique
        margin-top 12px
        text-transform uppercase
        font-size 12px
        color #13a0b2
      .node-title
        font-size 16px
        margin 5px 0 12px
      .field-name-body,
      .field-name-field-chapo
        margin-bottom 10px
  .pager
    .pager-item
      & a
        color color_magenta
    .pager-current
      color #fff
      background color_magenta
  .sidebars
    margin-top 40px
