// Structure of views lefil and page le fil (node-type-story)
.page-search
  h1.page__title
    display none
  h2.page-title
    font-size 34px
    margin 15px 0
    color #000
  .link-img
    position relative
    z-index 100
  .wrapper-info
    h2.node-title
      font-size 16px
      margin 0 0 12px
      color #000
      a
        color #000
        text-decoration none
    .field-name-field-thematique
      margin 0 0 12px
      text-transform uppercase
      font-size 12px
      color color_search
    .search-snippet
      line-height 1.3em
  .row-search-result
    margin 0
    padding 20px 0
    border-bottom solid 1px #eaeaea
  .pager
    .pager-item
      & a
        color color_search
    .pager-current
      color #fff
      background color_search
  .sidebars
    margin-top 40px
