/* Common header for Iris */

#header
  position relative
  font-family helvetica, arial
  &:before
    content " "
    display block
    box-sizing border-box
    absolute top left right
    z-index -1
    height 200px
    border-top solid 25px #303133
    background linear-gradient(top, #fff, 92px #fff, 92px #000)
  &:after
    content " "
    display block
    box-sizing border-box
    absolute top left 40% right
    z-index -1
    height 200px
    border-top solid 25px #303133
    background linear-gradient(top, #fff, 92px #fff, 92px #ed0361)
    .page-lefil &
      background linear-gradient(top, #fff, 92px #fff, 92px #ed0361)
  .wrapper-content-header
    position relative
    box-sizing border-box
    width 1024px
    height 138px
    margin 0 auto
    padding 0 20px
    &:after
      content " "
      display block
      box-sizing border-box
      absolute bottom left 270px right
      height 22px
      background #64747d
      .page-lefil &
        background #ed0361
    .header__site-name
      absolute top 0 left 20px
      width 55px
      background #535356
      color #fff
      text-transform uppercase
      text-align center
      font-size 12px
      padding-top 1px
      line-height 2em
      .header__site-link
        text-decoration none
        color #fff
    .header__logo
      box-sizing border-box
      absolute top 40px left 15px
      width 205px
      height 65px
