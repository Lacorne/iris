/* iris css file */

// Imports
@import '../../lib/styl/_conf'
@import '../../lib/styl/_effects'
@import '../../lib/styl/layout.styl'
@import '../../lib/styl/header.styl'
@import '../../lib/styl/footer.styl'
@import '../../lib/styl/navigation-superfish.styl'
@import '../../lib/styl/sidebars.styl'

body
  font-family arial

#main
  position relative
  box-sizing border-box
  width 1024px
  margin 0 auto
  padding 20px 10px
  background #fff
  font-size 13px
  color #666
  clearfix()

// Specials
.left
  float left
.right
  float right
.clear
  clear both

.mr20
  margin-right 20px
.ml20
  margin-left 20px

// Redactionnel
sup
  vertical-align super
  line-height 0
  font-size 10px
sub
  vertical-align sub
  line-height 0
  font-size 10px
.img-right
  float right
  margin-left 10px
  margin-bottom 10px
.img-left
  float left
  margin-right 10px
  margin-bottom 10px
.signature
  font-size 12px
  text-align center
  clear both
.renvois
  font-size 12px
  clear both
.legende
  display block
  color #000
  font-size 11px
td
  border-color #666

// General
body
  font-family arial
  text-rendering optimizeLegibility

img
  display block

body:not(.front)
  #content
    h2,
    h3
      color #000
      margin 0 0 15px
      a
        color #000
    h2
      font-size 15px
    h3
    font-size 12px
    a
      color #027ac6
      text-decoration none

// Generic Elements
article
  ol,
  ul
    padding-left 40px
    margin 15px 0
  ol
    list-style decimal
  ul
    list-style disc

.page__title
  font-size 22px
  color #000
  text-transform uppercase
  margin-bottom 16px

.field-name-body,
.field-name-field-chapo
  line-height 1.3em
  font-size 13px
  a
    color #027ac6
    text-decoration none

.view-footer
  clear both
  text-align center

#content,
.sidebars
  .bigbutton
    display inline-block
    box-sizing border-box
    padding 5px 15px
    font-weight bold
    text-transform uppercase
    text-decoration none
    font-size 12px
    &.blue
      color #fff
      background #46a4b8

.icone
  margin-left 1px
  &:first-child
    margin 0
  a
    display block
    background #535356 url('../images/icones-social.png') 0 0 no-repeat
    span
      absolute left -9999px

.new-content
  absolute top -1px
  margin-left 8px
  font-size .6em
  padding 3px 3px 2px 3px
  background #1061a9
  font-weight normal
  line-height 1.2
  &:before
    absolute top 2px left -6px
    content "◄"
    color #1061a9


// Taxonomy page
.page-taxonomy
  article
    border-bottom solid 1px #ccc
    margin-bottom 15px
    padding-bottom 15px
    img
      padding 0 10px 10px 0
    .field-type-taxonomy-term-reference
      clear both
    .links
      float right
      margin 0

// Pager
.item-list
  .pager
    li
      padding 5px
      margin 5px

// Pages generales
.field-name-body
  .field-label
    display none

// Message Dri
#block-views-infos-dri-block-dri
  position relative
  box-sizing border-box
  padding 25px 0 3px
  border solid 2px #b00606
  background #fff
  color #101010
  margin-bottom 20px
  ul
    margin 0
  li
    margin 0
  .links
    padding 0 3px
  .node-readmore
    a
      color #13a0b2
      text-decoration none
  .contextual-links-region
    position initial
  .content
    margin-top -25px
  .block__title
    box-sizing border-box
    absolute top left
    color #fff
    padding 4px
    /*background #b00606*/
    z-index 100
  .node__title
    position relative
    display block
    box-sizing border-box
    padding 4px 4px 4px 35px
    color #000
    background #eaeaea
    a
      color #000
      text-decoration none
    &:before
      display block
      content " "
      absolute top bottom left
      background #b00606
      width 31px
  .field-name-body
    margin-bottom 5px
    padding 0 3px


// Structure of home page
.front
  .view-display-id-home_lefil
    line-height 1.5
    .view-content
      .views-row-odd
        column(3, 12, noleft)
        clear left
      .views-row-even
        column(3, 12, noright)
    .view-display-id-first_news
      .views-row-odd
        column(6, 12, nomargin)
    .view-display-id-sticky_news
      .views-row-odd
        column(3, 12, noleft)
    .view-content
      .views-row
        margin-bottom 20px

// Gestion affichage news
.view-display-id-home_lefil
  .wrapper-info
    clearfix()
  .field-name-field-thematique
    display inline-block
    position relative
    margin 0 0 10px
    color #13a0b2
    text-transform uppercase
    font-size 12px
    line-height 1
    &:after
      display block
      box-sizing border-box
      absolute top 0 bottom 0 right -15px
      content '›'
      font-size 19px
      line-height .45em
  .field-name-field-image-actu
    margin-bottom 8px
  .node__title
    color #000
    font-size 14px
    margin 0 0 10px
    line-height 1.3
    a
      color #000
      text-decoration none
  .readmore
    //absolute bottom 0 right 0
    color #13a0b2
    text-decoration none
    line-height 1
    float right
  .links
    //absolute bottom 0 left 0
    line-height 1
    float left
    li
      padding 0

.view-display-id-first_news
  .view-mode-teaser_big_img
    position relative
    min-height 142px
    max-height 335px
    overflow hidden
    background #333
    .field-name-field-image-actu
      margin-bottom 0
    .wrapper-info
      absolute bottom 0 left 0 right 0
      box-sizing border-box
      padding 10px 20px
      color #fff
      bg-linear-gradient(300px, true, #000, top, rgba(0,0,0,.6), rgba(0,0,0,.6))
    .node__title
      color #fff
      font-size 18px
      margin 0 0 10px
      line-height 1
      a
        color #fff
    .field-name-field-thematique
      color #00ccff
    .readmore
        position relative
        color #00ccff
        float right
        line-height inherit
    .links
      absolute bottom 5px right 20px
      left auto
      line-height 1
      clear both

.view-display-id-sticky_news
  .view-content
    .views-row
      margin-bottom 0 !important

.view-mode-teaser_small_img
  height 331px
  max-height 330px
  .wrapper-info
    position relative
    padding-left 15px
    &:before
      content " "
      display block
      width 2px
      height 20px
      background #13a0b2
      absolute top 0 left 0
    &:after
      content " "
      display block
      width 2px
      background #02e3ff
      absolute top 20px bottom -12px left 0
  .field-name-body,
  .field-name-field-chapo
    white-space normal
    overflow hidden

#block-views-in-situ-block-insitu
  margin-top 20px
  .block__title
    position relative
    font-size 22px
    color #000
    text-transform uppercase
    padding-bottom 5px
    margin-bottom 10px
    border-bottom solid 2px #02e3ff
    &:after
      content " "
      display block
      width 75px
      height 2px
      background #13a0b2
      absolute bottom -2px left 0
  ul
    padding 0
  li
    position relative
    color #666
    list-style none
    margin 0
    padding 10px 15px 10px 15px
    line-height 1.3em
    border-bottom solid 1px #e0e0e0
    &.views-row-last
      border none
    a
      color #666
      text-decoration none
    .wrapper-center
      color #000
      font-weight bold
      font-size 14px
      display inline-block
    .wrapper-titlelink
      margin-top 3px
      line-height 1.3em
      display inline-block
    &:before
      display block
      content "▪"
      absolute top 11px left 0
      font-size 1.8em
      color #46a4b8
