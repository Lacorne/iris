/* navigation superfish for Iris */

#navigation
  box-sizing border-box
  absolute top -42px right 10px
  a
    color #fff
    text-decoration none
  #superfish-1
    > li
      box-sizing border-box
      position relative
      color #fff
      font-family arial
      text-transform uppercase
      font-weight bold
      font-size 12px
      margin 0
      padding 10px 10px 20px
      transition background-color .5s
      &:after
        display block
        content "•"
        color #fff
        absolute top 15px right -1px
        font-size 7px
        line-height 0
      &:last-child
        &:after
          display none
      &:hover
        background #333
        transition background-color .5s
      ul
        box-sizing border-box
        background #333
        padding 20px 0 20px
        top 41px
        li
          box-sizing border-box
          position relative
          padding 10px 20px 10px 30px
          margin 0
          transition background-color .5s
          &:before
            content "■"
            display block
            absolute top 9px left 12px
            font-size 11px
            color #46a4b8
            transition color .5s
          &:hover
            background-color #46a4b8
            transition background-color .5s
            &:before
              color #fff
              transition color .5s
          ul
            top -20px